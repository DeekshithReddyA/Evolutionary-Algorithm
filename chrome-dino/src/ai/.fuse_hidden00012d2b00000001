// ── Fitness-function strategies (Strategy pattern) ──

export const FitnessFunctions = {
  score: {
    name: 'Score Only',
    calculate: (dino) => dino.score,
  },
  distance: {
    name: 'Survival Time',
    calculate: (dino) => dino.framesSurvived,
  },
  combined: {
    name: 'Combined',
    calculate: (dino) => dino.score * 10 + dino.framesSurvived,
  },
};

export function getFitnessFunction(key) {
  return FitnessFunctions[key] || FitnessFunctions.score;
}
